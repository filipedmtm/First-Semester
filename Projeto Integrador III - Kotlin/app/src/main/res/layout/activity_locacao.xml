<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/imagemprojeto"
        android:importantForAccessibility="no" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnBack"
        android:layout_width="46dp"
        android:layout_height="41dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="348dp"
        android:background="@drawable/setinha_voltar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageView10"
        android:layout_width="373dp"
        android:layout_height="227dp"
        android:layout_marginTop="28dp"
        android:importantForAccessibility="no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fundocinzapi" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/lockerName"
        android:layout_width="269dp"
        android:layout_height="49dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="68dp"
        android:background="@drawable/edicaotexto_fundobranco"
        android:hint="@string/nomeArmario"
        android:padding="12dp"
        android:textColor="#707070"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/lockerLocation"
        android:layout_width="269dp"
        android:layout_height="49dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="68dp"
        android:background="@drawable/edicaotexto_fundobranco"
        android:hint="@string/localizaArmario"
        android:padding="12dp"
        android:textColor="#707070"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lockerName" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/lockerManager"
        android:layout_width="269dp"
        android:layout_height="49dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="68dp"
        android:background="@drawable/edicaotexto_fundobranco"
        android:hint="@string/gerenteArmario"
        android:padding="12dp"
        android:textColor="#707070"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lockerName" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageView9"
        android:layout_width="267dp"
        android:layout_height="194dp"
        android:importantForAccessibility="no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView10"
        app:srcCompat="@drawable/fundocinzapi" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnPagamento"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="272dp"
        android:layout_height="48dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="65dp"
        android:background="@drawable/botao_estilo"
        android:text="@string/confirmar_loca_o"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewGroupLockers" />

    <RadioGroup
        android:id="@+id/radioGroupPlanos"
        android:layout_width="233dp"
        android:layout_height="173dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView10">

        <RadioButton
            android:id="@+id/radioButtonPlan1"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radioButtonPlan2"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radioButtonPlan3"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:layout_height="38dp"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radioButtonPlan4"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RadioGroup>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewGroupLockers"
        android:layout_width="270dp"
        android:layout_height="222dp"
        android:layout_marginTop="192dp"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView10"
        app:layout_constraintVertical_bias="0.032"
        app:srcCompat="@drawable/fundocinzapi" />

    <RadioGroup
        android:id="@+id/radioGroupLockers"
        android:layout_width="235dp"
        android:layout_height="175dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewGroupLockers"
        app:layout_constraintEnd_toEndOf="@+id/imageViewGroupLockers"
        app:layout_constraintHorizontal_bias="0.613"
        app:layout_constraintStart_toStartOf="@+id/imageViewGroupLockers"
        app:layout_constraintTop_toBottomOf="@+id/imageView9">

        <RadioButton
            android:id="@+id/radioButtonLocker1"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radioButtonLocker2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radioButtonLocker3"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radioButtonLocker4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>